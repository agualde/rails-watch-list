<div class="container">
  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="col col-md-4 mt-5">
      <h1>Add a movie to your list</h1>

      <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.association :movie, prompt: 'Select a movie' %>
      <%= f.input :comment, as: :text %>
      <%= f.submit "Submit", class: 'btn btn-primary mt-3' %>
      <% end %>
      <%= link_to "cancel", list_path(@list), class: "btn kill-link kill-decoration", id: "cancel-link" %>
    </div>
     <div class="col-md-4">
     </div>
  </div>
</div>

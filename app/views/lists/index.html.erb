<div class="container">
  <div class="row above-lists-contents mt-3 mb-3">
      <p id="add-list-btn"><%= link_to "Create a movie list", new_list_path, class:"btn btn-success white mt-3 mb-3"%></p>
  </div>

  <div class="row">

    <div class="if-no-movie">
      <p style="text-align: center;<%= @lists.count == 0 ? 'height: 50vh; display: flex; align-items: center; justify-content: center;' : '' %>">
      <% if @lists.count == (0) %>
      <a href="/lists/new" class="btn">Wanna add a list?</a>
      <% else %>
      <% end %>
      </p>
    </div>

    <% @lists.each do |list| %>
      <div class="col-lg-4 col-md-4 col-sm-12 center">
          <div class="my-card" style=" background-image: url('https://picsum.photos/2000/3000?<%= rand(1..500) %>'); display: flex">
              <div><%= link_to list.name.capitalize, list_path(list), class: "btn color-white index-shadow", style: "padding: 0;" %></div>
          </div>
      </div>
    <% end %>
  </div>
</div>

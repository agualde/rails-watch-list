<div class="banner-show" style="background-image: url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=3270&q=80');"><div class="btn-wrap"><h3 class="btn btn-warning banner-btn-kill"><%=@list.movies.count%> <%=@list.movies.count == 1 ?  'movie' : 'movies' %></h3></div><h1 class="bold"><%= @list.name.capitalize %></h1></div>



<h1 class="mt-4"></h1>





<div class="container">
  <div class="above-lists-contents mt-3 mb-3">
    <div class="back-btn"><%= link_to "⬅ back", lists_path, class: "btn back-btn-txt kill-decoration black", id: "back-btn" %></div>
    <div id="add-movie-btn"><%= link_to "add a movie", new_list_bookmark_path(@list), class: "btn btn-success color-white" %></div>
  </div>
   <div class="row justify-content-center">
    <div class="if-no-movie"><p style="text-align: center;<%= @list.movies.count == 0 ? 'height: 50vh; display: flex; align-items: center; justify-content: center;' : '' %>"><%= @list.movies.count == 0 ? 'Wanna add a movie?' : ''%></p></div>
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col col-md-4 -col-lg-4 mt-5">
        <div class="card-trip mb-5">
            <%= image_tag bookmark.movie.poster_url, class: "poster" %>
          <div class="card-trip-infos">
            <div>
              <h2 class="mt-2 mb-2" id="card-title"><%= bookmark.movie.title %></h2>
              <p class="overflow-scroll mt-2"><%= bookmark.movie.overview %></p>
            </div>
              <div class="card-bottom mb-2 mt-2">
                <div class="card-bottom-left">
                  <span class="comment p-3"><%= bookmark.movie.bookmarks.last.comment.strip%></span>
                </div>
                <div class="card-bottom-right">
                  <h2 class="card-trip-pricing mt-2"><%= '⭐' * bookmark.movie.rating.round  %> </h2>
                  <%= link_to "Delete", bookmark_path(bookmark.id), method: :delete, style: "color: red;",class: "mt-2 text-small kill-link" %>
                </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

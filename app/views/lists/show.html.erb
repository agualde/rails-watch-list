<h1><%= @list.name %></h1>





<div class="container">
  <div class="row justify-content-center">


    <% @list.movies.each do |movie| %>
      <div class="col">
        <div class="card-trip">
            <%= image_tag movie.poster_url, class: "poster" %>
            <div class="card-trip-infos">
            <div>
            <h2><%= movie.title %></h2>
            <p><%= movie.overview %></p>
            </div>
            <div>
            <h2 class="card-trip-pricing"><%= '⭐' * movie.rating.round  %> </h2>
            <%= link_to "Delete", bookmark_path(movie), method: :delete, style: "color: red;" %>
          </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>




<%= link_to "Add a movie!", new_list_bookmark_path(@list) %>
